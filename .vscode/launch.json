    "version": "0.2.0",
    "configurations": [
        {
            "name": "guff",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--debug",
                "--disable-service-auth-codes",
                "--dart-define='env=production'"
            ]
        },
        {
            "name": "guff Dev",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--debug",
                "--disable-service-auth-codes",
                "--dart-define='env=development'"
            ]
        },
        {
            "name": "guff (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "guff (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Debug be",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/be",
            "args" : ["serve"]
        }
    ]
}